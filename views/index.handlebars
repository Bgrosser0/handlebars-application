
<div class="row">

    <div class="col-md-12">

<div class="jumbotron">
  <h1 class="text-center"><span class="glyphicon glyphicon-fire"></span>EAT-DA-BURGER</h1>
</div>

    </div>
</div>

<div class="row">

    <div class="col-md-6">

<div class="card">
  <div class="card-header">
    <h2>Burgers to eat!</h2>
  </div>
    <div class="card-body">

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

    </div>
</div>

    </div>

    <div class="col-md-6">


<div class="card">
  <div class="card-header">
    <h2>Eaten Burgers!</h2>  </div>
  <div class="card-body">

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

    </div>
</div>

    </div>

</div>

<div class="card">
  <div class="card-header">
    <h2>Eaten Burgers!</h2>  </div>
  <div class="card-body">

<form class="create-form">

  <div class="form-group">
    <label for="burg">New Burger:</label>
    <input type="text" id="burg" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Eaten Already?</label><br>
    <input type="radio" name="devoured" value="1" checked> Yeah!<br>
    <input type="radio" name="devoured" value="0"> Nope
  </div>

  <button type="submit">Add Burger</button>
</form>

    </div>
</div>